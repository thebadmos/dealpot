      <%- include('header') -%>
      <div id="user-modal" data-toggle="modal" data-target="#staticBackdrop">
        <!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" style="width: 60%;">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Price History</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" >
      </div>
    </div>
  </div>
</div>
      </div>
      <main id="main-search" data-id="<%=result.savedItems.length%>">
          <%if (result.savedItems.length) {%>
        <%result.savedItems.forEach(prod=>{%>
            <div class="card" style="width: 15rem;">
              <img src="<%=prod.imgUrl%>" class="card-img-top" alt="<%=prod.itemTitle%>" style="width: 200px; height: 200px;">
              <div class="card-body">
                <p class="card-text"><%=prod.vendor%></p>
                <p class="card-text"><%=prod.title%></p>
                <p class="card-text"><%=prod.price%></p>
                <button id="modal-btn" data-id="<%=prod._id%>" data-toggle="modal" data-target="#staticBackdrop">Price History</button>
                <p class="card-text">
                <span><i class="fas fa-heart touch" id="like" data-id="<%=prod.url%>"></i></span>
                <span><i class="fa-bell <%=prod.notify ? 'fas' : 'far'%>" id="notify" data-id="<%=prod.url%>"></i></span>
                </p>
                <a href="<%=prod.url%>" target="_blank" class="btn btn-primary">Go to vendor</a>
              </div>
            </div>
          <%})%>
         <%}else{%>
            <h1>No saved item yet</h1>
         <%}%>
      </main>
