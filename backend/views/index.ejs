<body>
    <%- include('header') -%>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
          <li data-target="#myCarousel" data-slide-to="1"></li>
          <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
    
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
          <div class="item active">
            <img src="/images/cart1.svg" alt="Los Angeles" style="width:100%;">
          </div>
    
          <div class="item">
            <img src="/images/cart2.svg" alt="Chicago" style="width:100%;">
            <!-- <div class="carousel-caption d-none d-md-block">
                <h5></h5>
              </div> -->
          </div>
        
          <div class="item">
            <img src="/images/cart3.svg" alt="New york" style="width:100%;">
          </div>
        </div>
    
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
        <!-- <div class="image-slide">
            <div class="slide">
                <img class="img-fluid" src="/images/cart1.svg" alt="imgae-slides"> -->
                <!-- <div class="slide-text">
                <h1>SURF & BUY!!</h1> 
                
        </div> -->
            </div>
            <!-- new deals -->
            <div class="deals">
                <h4>New Deals</h4>


                <!-- <div class="row"> -->
                <div class="small-container">
                    <div class="row">

                        <%data.newDeals.forEach(prod=>{%>
                            <div class="product-grid">
                                <img src="<%=prod.itemImage%>" alt="<%=prod.itemName%>">
                                <h6 class="caption-tems">
                                    <%=prod.vendor%>
                                </h6>
                                <h5 id="nameTag">
                                    <%=prod.itemName%>
                                </h5>
                                <h5 class="priceTag">
                                    <%=prod.itemPrice%>
                                </h5>
                                <a class="btn btn-primary" href="<%=prod.itemUrl%>" target="_blank">Go to vendor</a>
                            </div>
                            <%})%>
                    </div>
                </div>
            </div>
            <!-- popular deals -->
            <div class="deals">
                <h4>Popular Deals</h4>
                <div class="small-container">
                    <div class="row">
                        <%data.popularDeals.forEach(prod=>{%>
                            <div class="product-grid">
                                <img src="<%=prod.itemImage%>" alt="<%=prod.itemName%>">
                                <h6 class="caption-tems">
                                    <%=prod.vendor%>
                                </h6>
                                <h5 id="nameTag">
                                    <%=prod.itemName%>
                                </h5>
                                <h5 class="priceTag">
                                    <%=prod.itemPrice%>
                                </h5>
                                <a class="btn btn-primary" href="<%=prod.itemUrl%>" target="_blank">Go to vendor</a>
                            </div>
                            <%})%>
                    </div>
                </div>
            </div>
        </div>

        </div>
        </div>
        <%- include('footer') -%>


            <script src="/js/script.js"></script>
            <script src="/js/index.js"></script>
</body>

</html>