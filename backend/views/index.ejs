<body>
       <%- include('header') -%>
       <div class="image-slide">
        <div class="slide">
            <img src="/images/image15.png" alt="imgae-slides">
            <div class="slide-text">
                <h1>Cyber Week Sales</h1>
                <p id="text">Buy 2,get 1 free!!</p>
                <button class="getButton" >Get Started</button>
            </div>
        </div>
    </div>
    <!-- new deals -->
    <div class="deals">
        <h4>New Deals</h4>
        <hr>
    <div class="row">
        <%data.newDeals.forEach(prod=>{%>
        <div class="product-grid">               
            <img src="<%=prod.itemImage%>"  alt="<%=prod.itemName%>">
                      <h6 class="caption-tems"><%=prod.vendor%></h6>
                      <h5 id="nameTag"><%=prod.itemName%></h5>
                      <h5 class="priceTag"><%=prod.itemPrice%></h5> 
                      <a class="getVendorLink" href="<%=prod.itemUrl%>" target="_blank">Go to vendor</a>
                  </div>
                  <%})%>
                </div>
            </div>
      <!-- popular deals -->
      <div class="deals">
          <h4>Popular Deals</h4>
          <div class="row">
            <%data.popularDeals.forEach(prod=>{%>
                <div class="product-grid">               
                    <img src="<%=prod.itemImage%>"  alt="<%=prod.itemName%>">
                              <h6 class="caption-tems"><%=prod.vendor%></h6>
                              <h5 id="nameTag"><%=prod.itemName%></h5>
                              <h5 class="priceTag"><%=prod.itemPrice%></h5> 
                              <a class="getVendorLink" href="<%=prod.itemUrl%>" target="_blank">Go to vendor</a>
                          </div>
                          <%})%>
                        </div>
        </div>
      </div>
      <!-- image deals -->
<div class="image-deals deals">
    <div class="row">
        <div class="column1">
          <img src="/images/img9.png" alt="perfume" style="width:100%">
            <p>Perfumes</p>
        </div>
        
        <div class="column1">
          <img src="/images/img10.png" alt="shoe" style="width:100%">
          <p>Shoes</p>
        </div>
        <div class="column1">
          <img src="/images/img11.png" alt="glasess" style="width:100%">
          <p>Sunglasses</p>
        </div>
      </div>
      </div>
      <%- include('footer') -%>
